<h1 class="display-4 p-2">Edit Role</h1>

<div class="row">
  <div class="col-4">
    <%= form_with(url: users_update_role_path, local: true, method: :put) do |form| %>

      <% if @error %>
        <p class="border border-warning rounded p-2 m-2 text-danger"><%= @error %></p>
      <% end %>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, id: :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :role %>
        <%= form.select(:role, options_for_select(@roles), {}, {class: 'form-control'}) %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-8"></div>
</div>
